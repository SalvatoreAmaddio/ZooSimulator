<Window x:Class="ZooSimulator.View.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZooSimulator.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Welcome!" Height="450" Width="450">

    <Window.Resources>
        <Style TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="AliceBlue"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Image Source="{StaticResource WelcomeImage}" Stretch="UniformToFill"/>
        <StackPanel>
            <Label Content="Zoo" HorizontalAlignment="Center" FontSize="25"/>
            <Label Content="Simulator" HorizontalAlignment="Center" FontSize="25"/>
        </StackPanel>
        
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Label Content="Developed by" Padding="0" HorizontalContentAlignment="Center" VerticalAlignment="Bottom"/>
            <Label Content="Salvatore Amaddio" Padding="0,0,0,10" HorizontalContentAlignment="Center" VerticalAlignment="Top"/>
        </StackPanel>
    </Grid>
</Window>
